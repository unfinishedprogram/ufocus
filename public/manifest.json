{
    "name": "uFocus Extension",
    "description": "This extension is made for demonstration purposes",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "background": {
        "service_worker": "service_worker.js"
    },
    "action": {
        "default_popup": "main.html"
    },
    "content_scripts": [
        {
            "js": [
                "jira.js"
            ],
            "css": [
                "jira.css"
            ],
            "matches": [
                "https://*.atlassian.net/*"
            ]
        }
    ],
    "host_permissions": [
        "https://*/*"
    ]
}